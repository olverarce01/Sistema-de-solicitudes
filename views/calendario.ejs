<div id='calendar' class="m-5"></div>
<script>

fetch('https://sistema-de-solicitudes-production.up.railway.app/calendario/data')
  .then(response => response.json())
  .then(data => {

    $(function() {
  $('#calendar').fullCalendar({
    header: {
      left: 'title',
      right: 'prev,next today'
    },
    locale: 'es',
    events: data
  });
});

  });

</script>

